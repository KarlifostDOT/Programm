<Page x:Class="Programm.Views.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="AddUserPage">

    <Grid Background="#F1F1F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="1" Margin="40" HorizontalAlignment="Center">
            <TextBlock Text="Введите логин:" />
            <TextBox x:Name="usernameBox"  />

            <TextBlock Text="Введите пароль:" />
            <PasswordBox x:Name="passwordBox" />
            <Button Content="Добавить пользователя" Click="RegisterButton_Click"/>
            <Button Content="Вернуться" Click="BtnToDataPage_Click" Width="132" />
        </StackPanel>
    </Grid>
</Page>
