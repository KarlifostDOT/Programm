<Page x:Class="Programm.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programm.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">
    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" TextAlignment="Center"/>
            <StackPanel Orientation="Vertical" Margin="0 30">
                <TextBlock Text="Логин:" Margin="0 0 0 5"/>
                <TextBox x:Name="TxbLogin"  Padding="5"/>
                <TextBlock Text="Пароль:" Margin="0 20 0 5"/>
                <TextBox x:Name="TxbPassword" Padding="5" BorderThickness="1"  />
                <Button Content="Войти" Height="40" Margin="0 20"  Click="BtnSignIn_Click"/>
                <StackPanel Orientation="Horizontal" Margin="0 20">
                    <TextBlock Text="Не зарегистрированы?" />
                    <Button Content="Зарегистрироваться"  Margin="5 0"  Click="BtnToSignUp_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
